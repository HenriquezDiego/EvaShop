<link rel="stylesheet" type="text/css" href="~/css/contact.css">
<link rel="stylesheet" type="text/css" href="~/css/contact_responsive.css">

@{
	ViewData["Title"] = "Contact";
}

<div class="contact" style="margin-top: 10%">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="review_form_container">
						<div class="review_form_title">get in touch</div>
						<div class="review_form_content">
							<form action="#" id="review_form" class="review_form">
								<div class="d-flex flex-md-row flex-column align-items-start justify-content-between">
									<input name="name" type="text" class="review_form_input" placeholder="Name" required="required">
									<input name="email" type="email" class="review_form_input" placeholder="E-mail" required="required">
									<input name="subject" type="text" class="review_form_input" placeholder="Subject">
								</div>
								<textarea name="body" class="review_form_text" name="review_form_text" placeholder="Message"></textarea>
								<button type="submit" class="review_form_button">send message</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Contact Text -->

<div class="contact_text">
	<div class="container">
		<div class="row">

			<!-- Contact Info -->
			<div class="col-lg-5">

				<div class="contact_info">
					<div class="contact_title">contact info</div>
					<div class="contact_info_content">
						<ul>
							<li>
								<div class="contact_info_icon"><img src="images/contact_info_1.png" alt=""></div>
								<div class="contact_info_text">Santa ana, sede central</div>
							</li>
							<li>
								<div class="contact_info_icon"><img src="images/contact_info_2.png" alt=""></div>
								<div class="contact_info_text">Evaunderwear22@gmail.com</div>
							</li>
							<li>
								<div class="contact_info_icon"><img src="images/contact_info_3.png" alt=""></div>
								<div class="contact_info_text">(503) 7702-3542</div>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<!-- FAQ -->
			<div class="col-lg-7">
				<div class="faq">
					<div class="contact_title">faq</div>
					<div class="faq_content">

						<!-- Accordions -->
						<div class="accordions">

							<div class="accordion_container">
								<div class="accordion d-flex flex-row align-items-center"><div>¿Tienen envios a todo el pais?</div></div>
								<div class="accordion_panel">
									<p>Contamos con envio a todas las partes de El Salvador.</p>
								</div>
							</div>

							<div class="accordion_container">
								<div class="accordion d-flex flex-row align-items-center"><div>¿Donde se encuentra su sede central?</div></div>
								<div class="accordion_panel">
									<p>Nuestra sede Central esta ubicada en Santa Ana.</p>
								</div>
							</div>

							<div class="accordion_container">
								<div class="accordion d-flex flex-row align-items-center active"><div>¿Cual es el precio de envio por pedido?</div></div>
								<div class="accordion_panel">
									<p>El precio de envio es de $5.00.</p>
								</div>
							</div>

						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts
{
	<script src="~/js/contact_custom.js"></script>
}
